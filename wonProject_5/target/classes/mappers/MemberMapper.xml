<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.won.mapper.MemberMapper">
	
	<!-- 회원 가입 -->
	<insert id = "memberJoin">
	<![CDATA[
		insert into member 
		values(#{id}, #{m_name}, #{m_birth}, #{m_pw}, #{m_phone}, #{m_email}, 0, 1234)
	]]>
	</insert>

	<!-- 로그인 -->
	<select id = "memberLogin" resultType = "com.won.model.MemberVO">
	<![CDATA[
		select *
		from member 
		where id = #{id} and m_pw = #{m_pw}
	]]>
	</select>
	
	<!-- 구독 시작 -->
	<update id = "memberSubAdd" parameterType="string">
	<![CDATA[
		update member 
		set 
			m_sub  = 'ing'
		where id = #{id}
	]]>
	</update>
	
	<!-- 구독 중지 -->
	<update id = "memberSubStop" parameterType="string">
	<![CDATA[
		update member 
		set 
			m_sub  = 'stop'
		where id = #{id}
	]]>
	</update>

	
	
</mapper>